  <label class="form-label">Call ID</label>
  <input
    class="form-control"
    name="dial_alias"
    value="<%= service.dial_alias || '' %>"
    oninput="this.value=this.value.toUpperCase().replace(/[^A-Y0-9]/g,'')"
  >
</div>
      <div class="col-md-3">
        <label for="voice" class="form-label">Voice</label>
        <select class="form-control" id="voice" name="voice">
<option value="nova" <%= service.voice === 'nova' ? 'selected' : '' %>>Nova</option><option value="sierra" <%= service.voice === 'sierra' ? 'selected' : '' %>>Sierra</option><option value="fable" <%= service.voice === 'fable' ? 'selected' : '' %>>Fable</option><option value="coral" <%= service.voice === 'coral' ? 'selected' : '' %>>Coral</option><option value="ballad" <%= service.voice === 'ballad' ? 'selected' : '' %>>Ballad</option><option value="ash" <%= service.voice === 'ash' ? 'selected' : '' %>>Ash</option><option value="echo" <%= service.voice === 'echo' ? 'selected' : '' %>>Echo</option><option value="shimmer" <%= service.voice === 'shimmer' ? 'selected' : '' %>>Shimmer</option><option value="sage" <%= service.voice === 'sage' ? 'selected' : '' %>>Sage</option><option value="onyx" <%= service.voice === 'onyx' ? 'selected' : '' %>>Onyx</option><option value="nova" <%= service.voice === 'nova' ? 'selected' : '' %>>Nova</option>
        </select>
      </div>
      <div class="col-md-3">
        <label for="requires" class="form-label">Requires</label>
        <select class="form-control" id="requires" name="requires">
<option value="none" <%= service.requires.includes('none') ? 'selected' : '' %>>None</option>
<option value="weather" <%= service.requires.includes('weather') ? 'selected' : '' %>>Weather</option>
<option value="nasa" <%= service.requires.includes('nasa') ? 'selected' : '' %>>NASA</option>
<option value="earthquake" <%= service.requires.includes('earthquake') ? 'selected' : '' %>>Earthquake</option>
<option value="complaint" <%= service.requires.includes('complaint') ? 'selected' : '' %>>Complaint</option>
        </select>
      </div>
      <div class="col-md-3">
        <label for="is_loop" class="form-label">Reply Loop</label>
<div class="m-2 form-check">
  <input
    class="form-check-input"
    type="checkbox"
    id="is_loop"
    name="is_loop"
    value="<%= service.is_loop %>"
    <%= service.is_loop ? 'checked' : '' %>
  >
  <label class="form-check-label" for="is_loop">
    Allow Responses
  </label>
</div>
      </div>

    </div>

    <!-- Opener Field -->
    <div class="mb-3">
      <label for="opener" class="form-label">Opener</label>
      <input class="form-control" id="opener" name="opener" value="<%= service.opener %>">
    </div>

    <!-- Content Field -->
    <div class="mb-3">
      <label for="content" class="form-label">Content</label>
      <textarea class="form-control" id="content" name="content" rows="7"><%= service.content %></textarea>
    </div>

    <!-- Closer Field -->
    <div class="mb-3">
      <label for="closer" class="form-label">Closer</label>
      <input class="form-control" id="closer" name="closer" value="<%= service.closer %>">
    </div>
</div>

  <div class="card-footer p-4">
<button type="button" class="mx-1 btn btn-secondary" onclick="window.location.href='/editor';">Cancel</button>

    <button type="submit" class="mx-1 btn btn-primary">Save Changes</button>
  </div>

  </form>
</div>
</div>

