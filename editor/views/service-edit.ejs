<%- include("partials/header") %>


<div id="tokenBar" class="m-2 mt-0 d-none  p-1 bg-white"></div>

<script>
let activeField = null;

const baseTokens = [
  "greeting",
  "season","timeofday","weekday","year","month","day","hour","minute",
  "moonphase","planetaryday",
];

const requiresTokens = {
  weather: ["weather_temperature","weather_condition","weather_high","weather_low"],
  nasa: ["nasa_event","nasa_date"],
  earthquake: ["earthquake_magnitude","earthquake_location"],
  complaint: ["complaint_type","complaint_summary"]
};

function getRequiresTokens() {
  const sel = document.getElementById("requires");
  if (!sel) return [];
  const val = sel.value;
  if (!val || val === "none") return [];
  return requiresTokens[val] || [];
}

function humanize(key) {
  return key.replace(/_/g, " ").replace(/\b\w/g, c => c.toUpperCase());
}

function insertToken(token) {
  if (!activeField) return;

  activeField.focus();

  const text = `{{${token}}}`;

  // This preserves native undo reliably
  document.execCommand("insertText", false, text);
}

function renderTokens(tokenBarEl, required, base) {
  tokenBarEl.innerHTML = "";
  tokenBarEl.classList.remove("d-none");

  const addBtn = (token, color) => {
    const btn = document.createElement("button");
    btn.type = "button";
    btn.className = `btn btn-sm btn-outline-${color} rounded-pill px-2 py-0 me-1 mb-1`;
    btn.style.fontSize = "0.75rem";
    btn.textContent = humanize(token);

    // don't steal focus -> keeps undo sane
    btn.addEventListener("pointerdown", e => {
      e.preventDefault();
      e.stopPropagation();
      insertToken(token);
    });

    tokenBarEl.appendChild(btn);
  };

  required.forEach(t => addBtn(t, "primary"));
  base.forEach(t => addBtn(t, "info"));
}

document.addEventListener("DOMContentLoaded", () => {
  const tokenBarEl = document.getElementById("tokenBar");

  // only these fields get tokens
  document.querySelectorAll("#opener, #content, #closer").forEach(el => {
    el.addEventListener("focus", () => {
      activeField = el;

      // place BELOW the field
      el.insertAdjacentElement("afterend", tokenBarEl);

      renderTokens(tokenBarEl, getRequiresTokens(), baseTokens);
    });
  });

  document.getElementById("requires")?.addEventListener("change", () => {
    if (!activeField) return;
    renderTokens(tokenBarEl, getRequiresTokens(), baseTokens);
  });

  // click-away hides the bar
  document.addEventListener("pointerdown", e => {
    if (
      tokenBarEl.contains(e.target) ||
      e.target.closest("#opener, #content, #closer")
    ) {
      return;
    }
    tokenBarEl.classList.add("d-none");
    activeField = null;
  });
});
</script>

