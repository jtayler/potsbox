<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>PotsBox Editor</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap -->
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet">
</head>
<body class="bg-light">

<div class="container py-4">
  <h1 class="mb-4">PotsBox Editor</h1>

  <div class="row">
    <!-- Lines -->
    <div class="col-md-6">
      <h3>Lines</h3>
      <ul class="list-group">
        <% lines.forEach(line => { %>
          <li class="list-group-item pb-0">
<p>
            <a href="/editor/line/<%= line.id %>" class="btn-link">
              <strong><%= line.dial_code || '(no extension)' %> <%= line.name || '(unnamed line)' %></strong>
            </a>
<br>
            <%= line.note || '(no note)' %>
</p>
          </li>
        <% }) %>
      </ul>
    </div>

    <!-- Services -->
    <div class="col-md-6">
      <h3>Services</h3>
      <ul class="list-group">
<% services.forEach(service => { %>
  <li class="list-group-item pb-3">
    <a href="/editor/service/<%= service.id %>" class="btn-link">
      <strong>
        <%= service.dial_code || '(no dial code)' %>
        <%= service.name || '(unnamed service)' %>
      </strong>
    </a>
    <br>
    <%= service.note || '(no note)' %> Spoken by <strong><%= service.voice ? service.voice.charAt(0).toUpperCase() + service.voice.slice(1) : 'Default' %></strong>

<br>

<% if (service.is_loop) { %>
  <em class="text-success">This service replies to responses</em><br>
<% } %>

  </li>
<% }) %>
      </ul>
    </div>
  </div>
</div>

</body>
</html>
