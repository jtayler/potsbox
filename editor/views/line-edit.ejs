<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>Edit Line - PotsBox</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootswatch@5/dist/flatly/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
<div class="container py-4 col-8">
<div class="card shadow-sm">
<div class="card-header p-4">
  <h1 class="mb-4">Edit Line: <%= line.name %></h1>
</div>
<div class="card-body p-4">


  <form method="POST" action="/editor/line/<%= line.id %>">
    <div class="mb-3">
      <label for="name" class="form-label">Line Name</label>
      <input type="text" class="form-control" id="name" name="name" value="<%= line.name %>" required>
    </div>

    <div class="mb-3">
      <label for="note" class="form-label">Note</label>
      <textarea class="form-control" id="note" name="note" rows="3"><%= line.note %></textarea>
    </div>

    <div class="mb-3">
      <label for="dial_code" class="form-label">Extension (Dial Code)</label>
      <input type="text" class="form-control" id="dial_code" name="dial_code" value="<%= line.dial_code %>" required>
    </div>

</div>

  <div class="card-footer p-4">
<button type="button" class="mx-1 btn btn-secondary" onclick="window.location.href='/editor';">Cancel</button>

    <button type="submit" class="mx-1 btn btn-primary">Save Changes</button>
  </form>
</div>
</div>

</body>
</html>
